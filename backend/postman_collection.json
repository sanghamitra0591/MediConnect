{
  "info": {
    "name": "MediConnect Backend API",
    "description": "Telemedicine platform backend APIs for doctor management, device registration, session handling, and admin dashboard.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "doctorToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Doctor",
      "item": [
        {
          "name": "Register Doctor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dr. John Smith\",\n  \"email\": \"dr.smith@mediconnect.com\",\n  \"password\": \"password123\",\n  \"specialization\": \"Cardiology\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/doctors/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "register"]
            }
          }
        },
        {
          "name": "Login Doctor",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('doctorToken', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.smith@mediconnect.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/doctors/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "login"]
            }
          }
        },
        {
          "name": "Logout Doctor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/doctors/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "logout"]
            }
          }
        },
        {
          "name": "Toggle Availability",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/doctors/availability",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "availability"]
            }
          }
        }
      ]
    },
    {
      "name": "Device",
      "item": [
        {
          "name": "Register Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"pharmacy-device-001\",\n  \"gps\": {\n    \"lat\": 40.7128,\n    \"lng\": -74.0060\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/devices/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "devices", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Session",
      "item": [
        {
          "name": "Initiate Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"pharmacy-device-001\",\n  \"patientName\": \"Jane Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sessions/initiate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sessions", "initiate"]
            }
          }
        },
        {
          "name": "Get Active Sessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/sessions/active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sessions", "active"]
            }
          }
        },
        {
          "name": "Complete Session",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/sessions/{{sessionId}}/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sessions", "{{sessionId}}", "complete"]
            }
          }
        },
        {
          "name": "Cancel Session",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/sessions/{{sessionId}}/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sessions", "{{sessionId}}", "cancel"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Online Doctors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/online-doctors",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "online-doctors"]
            }
          }
        },
        {
          "name": "Get Active Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/active-sessions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "active-sessions"]
            }
          }
        },
        {
          "name": "Get Devices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/devices",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "devices"]
            }
          }
        }
      ]
    }
  ]
} 